<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >

    <ImageView
        android:id="@+id/apptour_image_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:src="@drawable/img_delivery_list"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingTop="8dp">

        <TextView
            android:id="@+id/titleTextView"
            android:textAlignment="center"
            android:paddingBottom="10dp"
            android:text="@string/apptour_delivery_list_title_text"
            style="@style/TextView.Wide.Title"
            />

        <TextView
            android:id="@+id/descTextView"
            android:textAlignment="center"
            android:text="@string/apptour_delivery_details_desc_text"
            style="@style/TextView.Wide.Desc.Grey"
            />

    </LinearLayout>

</LinearLayout>