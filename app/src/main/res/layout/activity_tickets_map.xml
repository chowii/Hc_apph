<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout
    android:id="@+id/cl_container"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="au.com.holcim.holcimapp.activities.TicketsMapActivity">

    <fragment xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:id="@+id/map"
              tools:context=".activities.TicketsMapActivity"
              android:name="com.google.android.gms.maps.SupportMapFragment" />

    <ImageButton
        android:id="@+id/btn_close"
        android:background="@drawable/circle_red_fill"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_clear_white_24dp"
        android:padding="2dp"
        android:layout_gravity="right|top"
        android:layout_margin="16dp"/>

    <ImageButton
        android:id="@+id/btn_info"
        android:background="@android:color/transparent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_info_black_36dp"
        android:layout_gravity="left|top"
        android:layout_margin="13dp"/>

    <ProgressBar
        android:id="@+id/pb_poll_indicator"
        android:layout_width="36dp"
        android:layout_height="36dp"
        android:indeterminate="true"
        android:visibility="gone"
        android:indeterminateTintMode="src_atop"
        android:indeterminateTint="@color/primaryRed"
        android:layout_marginLeft="13dp"
        android:layout_marginTop="54dp"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:layout_margin="16dp">

        <android.support.v4.view.ViewPager
            android:id="@+id/vp_tickets"
            android:layout_width="match_parent"
            android:layout_height="100dp"/>

        <ImageButton
            android:id="@+id/btn_left"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:src="@drawable/ic_chevron_left_black_24dp"
            android:background="@drawable/white_rounded_with_shadow"
            android:layout_margin="4dp"/>

        <ImageButton
            android:id="@+id/btn_right"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_gravity="center_vertical|right"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:src="@drawable/ic_chevron_right_black_24dp"
            android:background="@drawable/white_rounded_with_shadow"
            android:layout_margin="4dp"/>

    </RelativeLayout>


</android.support.design.widget.CoordinatorLayout>
